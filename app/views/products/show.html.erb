<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
      
      <%= form_for [@product, Review.new] do |form| %>
          <h2>Leave a review</h2>
            <div class="form-group">
              <%= form.label :Review %>
              <%= form.text_area :description, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :rating %>
              <%= form.select :rating, ['1','2','3','4','5'], { include_blank: true }, class: 'form-control' %>
            </div>
          <%= form.submit 'Leave a reviews', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>

    <% @product.reviews.each do |review| %>
      <div class="alert alert-warning">
          <h3>Review from UserID:<%= review.user_id %></h3>
          <p>Description : <%= review.description %><p/>
          <p>Rating : <%= review.rating %></p>
      </div>
    <% end %>
  </article>

</section>